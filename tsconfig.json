{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/slider-bar-indicator/*": ["./scripts/scrollbar-slider-indicator/*"],
      "@/slider-remote-nav/*": ["./scripts/remote-slider-navigation-handler/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts"]
}
